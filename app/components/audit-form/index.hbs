<div local-class="hero-section">
  <h2 local-class="hero-title">Make Your Website Accessible</h2>
  <p local-class="hero-description">
    Paste your HTML code or upload files to instantly check for accessibility violations and get actionable fixes
  </p>
</div>

<form {{on 'submit' this.runAudit}} local-class="form-container">
  <div local-class="input-header">
    <label for="html-input" local-class="label">HTML Input</label>
    <div local-class="action-buttons">
      <button type="button" local-class="secondary-button">Paste HTML</button>
      <button type="button" local-class="secondary-button">Upload File</button>
    </div>
  </div>

  <textarea
    id="html-input"
    name="html-input"
    local-class="textarea"
    rows="10"
    value={{@htmlInput}}
    {{on 'input' this.updateInput}}
    aria-describedby="form-instructions"
    spellcheck="false"
    placeholder="Paste your HTML code here..."
  ></textarea>

  <div local-class="upload-option">
    <span class="icon-upload">â†‘</span> Or upload .html file
  </div>

  <button
    type="submit"
    local-class="check-accessibility-button"
    disabled={{not this.htmlInput}}
  >
    <span class="icon-search">Q</span> Check Accessibility
  </button>
</form>

{{yield (hash
  htmlInput=this.htmlInput
  isLoading=this.isLoading
  auditResults=this.auditResults
  auditRun=this.auditRun
)}}