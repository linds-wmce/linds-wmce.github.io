<form {{on "submit" @runAudit}} local-class="form">
  <div local-class="instructions">
    Paste your HTML into the form below and click "Run Audit" to get started.
  </div>

  <label for="html-input" local-class="label">HTML to Audit:</label>
  <textarea
    id="html-input"
    local-class="textarea"
    rows="8"
    value={{@htmlInput}}
    {{on "input" @updateInput}}
  ></textarea>

  <button type="submit" local-class="submit">Run Audit</button>
</form>
