<div local-class="hero-section">
  <h2 local-class="hero-title">Make Your Website Accessible</h2>
  <p local-class="hero-description">
    Paste your HTML code, upload files, or enter a URL to instantly check for accessibility violations and get actionable fixes.
  </p>
</div>

<form {{on 'submit' this.runAudit}} local-class="form-container">
  <div local-class="input-header">
    <label for="html-input" local-class="label">Raw HTML Input</label>
    <div local-class="action-buttons">
      <button type="button" local-class="secondary-button" {{on "click" this.handleFileUpload}}>Upload File</button>
    </div>
  </div>

  <div local-class="textarea-wrapper">
    <textarea
      id="html-input"
      name="html-input"
      local-class="textarea"
      rows="10"
      value={{this.htmlInput}}
      {{on 'input' this.handleInput}}
      aria-describedby="form-instructions"
      spellcheck="false"
      placeholder="Paste your HTML code here..."
    ></textarea>
    {{#if this.htmlInput}}
      <button 
        type="button" 
        local-class="textarea-clear-button" 
        {{on "click" this.handleClear}}
        aria-label="Clear text"
        title="Clear text"
      >
        ×
      </button>
    {{/if}}
  </div>

  <button
    type="submit"
    local-class="check-accessibility-button"
    disabled={{not this.htmlInput}}
  >
    <span class="icon-search"></span> Check Accessibility
  </button>
</form>

<div local-class="form-container">
  <div local-class="input-header">
    <label for="url-input" local-class="label">Audit by URL</label>
  </div>

  <div local-class="url-input-wrapper">
    <input
      id="url-input"
      type="text"
      value={{this.urlInput}}
      {{on "input" this.handleUrlInput}}
      placeholder="Enter a website URL (https://...)"
      local-class="url-input"
    />
    {{#if this.urlInput}}
      <button
        type="button"
        local-class="textarea-clear-button"
        {{on "click" this.clearUrl}}
        aria-label="Clear URL"
        title="Clear URL"
      >
        ×
      </button>
    {{/if}}
  </div>

  <button
    type="button"
    local-class="check-accessibility-button"
    disabled={{not this.urlInput}}
    {{on 'click' this.runUrlAudit}}
  >
    Check Accessibility (URL)
  </button>
</div>

{{yield (hash
  htmlInput=this.htmlInput
  isLoading=this.isLoading
  auditResults=this.auditResults
  auditRun=this.auditRun
  errorMessage=this.errorMessage
)}}