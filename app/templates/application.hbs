{{page-title "A11ycat"}}
  <PageLayout>
    <LogoHeader />

    <TabButtons
      @activeTab={{this.activeTab}}
      @setTab={{this.setTab}}
    />

    {{#if (eq this.activeTab "Audit")}}
    <AuditForm
      @htmlInput={{this.htmlInput}}
      @updateInput={{this.updateInput}}
      @runAudit={{this.runAudit}}
    />

    <AuditResults @results={{this.auditResults}} @htmlInput={{this.htmlInput}} />
      {{else if (eq this.activeTab "Examples")}}
        <Examples />
      {{/if}}
    </PageLayout>


{{outlet}}
