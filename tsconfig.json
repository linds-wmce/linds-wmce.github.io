{
  "extends": "@tsconfig/ember/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["ember__render-modifiers"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "a11ycat/tests/*": ["tests/*"],
      "a11ycat/*": ["app/*"],
      "*": ["types/*"]
    }
  },
  "include": ["app/**/*", "tests/**/*", "types/**/*"]
}
